<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
           id="com.bluefletch.motorola"
      version="0.1.0">
    <name>Motorola Cordova Plugin</name>


    <js-module src="www/barcodescanner.js" name="MotorolaBarcodeScanner">
        <clobbers target="motorolaBarcodeScanner" />
    </js-module>
    <js-module src="www/magstripe.js" name="MotorolaMagStripeReader">
        <clobbers target="motorolaMagstripe" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="MotorolaDataWedgePlugin" >
                <param name="android-package" value="com.bluefletch.motorola.plugin.MotorolaDataWedgePlugin"/>
            </feature>
        </config-file>
         <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <!--
             * This class is triggered upon event by the DataWedge Barcode Scanner or Magstripe reader.  
             * DataWedge must be configured to match the intent parameters below
            * NOTE: this feature is not built, but would allow a specific app to launch in result of a barcode scan.
            
            <receiver android:name="com.bluefletch.motorola.plugin.DataWedgeIntentReceiver" >
                <intent-filter>
                    <action android:name="com.motorolasolutions.emdk.datawedge.action" />
                    <category android:name="android.intent.category.DEFAULT" />
                </intent-filter>
            </receiver>
            -->
        </config-file>
        <source-file src="lib/android/com/bluefletch/motorola/BarcodeScan.java" target-dir="src/com/bluefletch/motorola" />
        <source-file src="lib/android/com/bluefletch/motorola/ScanCallback.java" target-dir="src/com/bluefletch/motorola" />
        <source-file src="lib/android/com/bluefletch/motorola/DataWedgeIntentHandler.java" target-dir="src/com/bluefletch/motorola" />
        <source-file src="src/android/com/bluefletch/motorola/plugin/MotorolaDataWedgePlugin.java" target-dir="src/com/bluefletch/motorola/plugin" />
    </platform>

</plugin>


